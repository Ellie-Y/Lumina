{
  "restartable": "rs",
  "ignore": [
    ".gitignore",
    "node_modules/**/node_modules",
    "package*.json",
    "nodemon.json",
    "public"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "watch": [
    "*.js",
    "*.json"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}